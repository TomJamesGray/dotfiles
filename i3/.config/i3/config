# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      workspace_buttons yes
      i3bar_command i3bar -t
      status_command i3blocks -c ~/.config/i3/i3blocks.conf
      output HDMI-0
      tray_output none
      position top
      separator_symbol " "
      height 20
      colors{
        background $transparent
        #                   border          background     text
        focused_workspace		$transparent		$blue			     $gray		
        inactive_workspace	$transparent		$transparent	 $gray
        urgent_workspace		$transparent		$red			 	   $gray
      }
}
bar{
    workspace_buttons yes
    i3bar_command i3bar -t
    output DVI-I-1
    position top
    #font pango:Roboto 8
    mode hide
    tray_output none
    #hidden_state hide
    colors{
      background $transparent
      #                   border        background  text
      focused_workspace $transparent    $blue       $gray
      active_workspace $bar2bg           #304266    $gray
      inactive_workspace $transparent $bar2bg $gray
    }
}
